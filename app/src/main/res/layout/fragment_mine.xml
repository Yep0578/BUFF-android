<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/idcolor1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:gravity="left"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:layout_gravity="center"
            android:background="#000000"
            android:textColor="@color/switch_btn_colors"
            android:id="@+id/login"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right">

            <Button
                android:id="@+id/charge"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_circle_shape1"
                android:text="充值"
                android:textColor="#FFD700" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#404040">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#404040"
            android:layout_marginTop="10dp">
<!--            钱包-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/money"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center"
                />
<!--            积分-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/count"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#404040">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="钱包"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="积分"
                android:gravity="center"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#353535">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="我的信息"
            android:textSize="20dp"
            android:textColor="#ffffff"

            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="#808080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bh"
                android:src="@drawable/buy"
                />
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/sh"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sales"
                />
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/collect"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/selection"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#404040">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#808080"
                android:textSize="15dp"
                android:text="我的购买"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#808080"
                android:textSize="15dp"
                android:text="我的出售"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textColor="#808080"
                android:textSize="15dp"
                android:gravity="center"
                />

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:id="@+id/quit"
            android:text="退出登录"
            android:background="@drawable/button_circle_shape4"/>

    </LinearLayout>

</LinearLayout>